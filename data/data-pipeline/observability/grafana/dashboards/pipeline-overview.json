{
  "dashboard": {
    "title": "Kappa Pipeline Overview",
    "tags": ["kappa", "pipeline"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Kafka Consumer Lag",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "kafka_consumer_lag",
            "legendFormat": "{{consumer_group}} - {{topic}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Processing Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(kafka_consumer_records_consumed_total[5m])",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Total Sales by City (Last 24h)",
        "type": "table",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "format": "table",
            "rawSql": "SELECT city, SUM(total_sales) as total_sales, SUM(transaction_count) as transactions FROM top_sales_by_city WHERE window_start >= NOW() - INTERVAL '24 hours' GROUP BY city ORDER BY total_sales DESC LIMIT 10",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Top Salesmen (Last 24h)",
        "type": "table",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "format": "table",
            "rawSql": "SELECT salesman_name, SUM(total_sales) as total_sales, SUM(transaction_count) as transactions FROM top_salesman_country WHERE window_start >= NOW() - INTERVAL '24 hours' GROUP BY salesman_name ORDER BY total_sales DESC LIMIT 10",
            "refId": "A"
          }
        ]
      }
    ],
    "schemaVersion": 16,
    "version": 0
  }
}
